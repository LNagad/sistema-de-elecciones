<html lang="en">


<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/assets/css/bootstrap/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/sweetAlert.css">
  {{#if loginCSS}}

  <link rel="stylesheet" href="/assets/css/login.css">

  {{/if}}
  <title>{{pageTitle}}</title>

  {{#if votacionActive}} 
  <script src="/assets/js/site/votacion.js" async></script>
  <script src="/assets/js/site/votacionComponents/printCandidato.js" async></script>
  <script src="/assets/js/site/votacionComponents/printCandidatos.js" async></script>
  <script src="/assets/js/site/votacionComponents/printPuestos.js" async></script>
  {{/if}}
</head>

<body>

  <nav class="navbar navbar-expand-md navbar-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/votacion">Votaciones</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">

          {{#if isAuthenticated}}
          <li class="nav-item">
                <a class="nav-link {{#if candidatoActive}}active{{/if}}" href="/candidato">Candidatos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link {{#if puestoActive}}active{{/if}}" href="/puesto">Puestos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link {{#if partidoActive}}active{{/if}}" href="/partido">Partidos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link {{#if ciudadanoActive}}active{{/if}}" href="/ciudadano">Ciudadanos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link {{#if eleccionActive}}active{{/if}}" href="/eleccion">Elecciones</a>
              </li>
          {{/if}}
        </ul>

        <div class="d-flex">

          <ul class="navbar-nav me-auto mb-2 mb-md-0">

            {{#if isAuthenticated}}

            <li class="nav-item">
              <form action="/logout" method="POST">
                <button class="btn btn-danger" type="submit">Logout</button>
              </form>
            </li>

            {{else}}

            {{#if isCiudadano}}

             {{else}}
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/login">Login</a>
            </li>
             {{/if}}

            {{/if}}

          </ul>

        </div>

      </div>
    </div>
  </nav>



  <main class="col-12 px-1 py-1 px-lg-0 py-lg-0 col-lg-12">

    {{#if hasErrorMessages}}

    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <ul>
        {{#each errorMessages}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    {{/if}}

    {{#if hasSuccessMessages}}

    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <ul>
        {{#each successMessages}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <button type="button" class="btn-close mt-4" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    {{/if}}

    {{{body}}}

  </main>

  <script src="/assets/js/bootstrap/bootstrap.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="/assets/js/sweetAlert.js"></script>

  
  {{!-- {{#if homeActive}}
    <script src="/assets/js/site/index.js"></script>
  {{/if}} --}}

</body>

</html>