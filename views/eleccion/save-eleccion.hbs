<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="card">
      <div class="card-header bg-dark text-white">
        {{#if editMode}}Edicion{{else}}Creacion{{/if}} de elecci√≥n
      </div>
      <div class="card-body">

        <form enctype="multipart/form-data" method="POST" action="{{#if editMode}}/edit-eleccion{{else}}/create-eleccion{{/if}}">
          <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="name" name="name" value="{{#if editMode}}{{eleccion.name}}{{/if}}" />
          </div>

          <div class="mb-3">
            <label for="fechaRealizacion" class="form-label">Fecha</label>
            <input type="date" class="form-control" id="fechaRealizacion" name="fechaRealizacion" value="{{#if editMode}}{{eleccion.fechaRealizacion}}{{/if}}" />
          </div>


          {{#if editMode}}

          <input type="hidden" name="eleccionId" value="{{eleccion.Id}}">
          
          {{/if}}

          <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
           <a href="/eleccion" type="button" class="btn btn-warning">volver atras</a>
        </form>

      </div>
    </div>

  </div>
  <div class="col-md-6"></div>

</div>